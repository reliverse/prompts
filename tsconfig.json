{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./addons/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": false,
    "module": "preserve",
    "noEmit": true,
    "lib": ["es2022"]
  },
  "include": [
    "build.pub.ts",
    "build.paths.ts",
    "build.config.ts",
    "eslint.config.js",
    "vitest.config.ts",
    "src/**/*.ts",
    "addons/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
