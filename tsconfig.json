{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "#/*": ["./addons/*"],
      "@/*": ["./examples/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "NodeNext",
    "noEmit": true,
    "lib": ["es2022"],
    "moduleResolution": "nodenext"
  },
  "include": [
    "build.optim.ts",
    "build.config.ts",
    "eslint.config.js",
    "vitest.config.ts",
    "src/**/*.ts",
    "addons/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": ["output", "node_modules"]
}
