{
  "name": "@reliverse/relinka",
  "version": "1.0.3",
  "type": "module",
  "description": "@reliverse/relinka is a powerful library that enables seamless, typesafe, and resilient prompts for command-line applications. Crafted with simplicity and elegance, it provides developers with an intuitive and robust way to build interactive CLIs.",
  "scripts": {
    "appts": "bun typecheck && bun lint && bun format",
    "build": "unbuild && bun build.optim.ts",
    "bunp": "bun publish",
    "pub": "redrun build bunp",
    "lint": "eslint --cache --fix .",
    "format": "biome check --write .",
    "optimize:tmp": "putout examples/external/terkelg --fix",
    "optimize:output": "putout output --fix",
    "check": "bun test",
    "attw": "attw --pack",
    "tsc": "tshy",
    "knip": "knip",
    "start": "node output/main.js",
    "dev": "bun examples/run-example.ts",
    "dev:x": "tsx examples/run-example.ts",
    "test:tape": "tape test/*.js | tap-spec",
    "release": "bumpp & bun pub"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reliverse/relinka.git"
  },
  "main": "./output/main.js",
  "types": "./output/main.d.ts",
  "module": "./output/main.js",
  "exports": {
    "import": "./output/main.js",
    "types": "./output/main.d.ts"
  },
  "bugs": {
    "url": "https://github.com/reliverse/relinka/issues",
    "email": "blefnk@gmail.com"
  },
  "files": ["package.json", "README.md", "LICENSE.md", "output"],
  "homepage": "https://github.com/reliverse/relinka",
  "keywords": ["cli", "reliverse"],
  "license": "MIT",
  "dependencies": {
    "@figliolia/chalk-animation": "^1.0.4",
    "@sinclair/typebox": "^0.34.6",
    "ansi-diff-stream": "^1.2.1",
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^3.2.0",
    "cli-styles": "^1.0.0",
    "cli-width": "^4.1.0",
    "defu": "^6.1.4",
    "detect-package-manager": "^3.0.2",
    "figlet": "^1.8.0",
    "fs-extra": "^11.2.0",
    "get-pixels": "^3.3.3",
    "gradient-string": "^3.0.0",
    "kleur": "^4.1.5",
    "log-update": "^6.1.0",
    "mute-stream": "^2.0.0",
    "node-emoji": "^2.1.3",
    "nypm": "^0.3.12",
    "ora": "^8.1.1",
    "pathe": "^1.1.2",
    "picocolors": "^1.1.1",
    "precision": "^1.0.1",
    "seventh": "^0.9.2",
    "sisteransi": "^1.0.5",
    "string-width": "^7.2.0",
    "window-size": "^1.1.1",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@biomejs/biome": "1.9.4",
    "@cspell/dict-npm": "^5.1.13",
    "@eslint/js": "^9.15.0",
    "@types/ansi-diff-stream": "^1.2.3",
    "@types/bun": "^1.1.13",
    "@types/chalk-animation": "^1.6.3",
    "@types/eslint__js": "^8.42.3",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mute-stream": "^0.0.4",
    "@types/node": "^22.9.1",
    "@types/sentencer": "^0.2.3",
    "@types/tape": "^5.6.4",
    "@types/window-size": "^1.1.4",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "eslint-plugin-perfectionist": "^4.0.3",
    "knip": "^5.37.1",
    "mock-stdin": "^1.0.0",
    "printj": "^1.3.1",
    "putout": "^36.12.0",
    "redrun": "^11.0.5",
    "sentencer": "^0.2.1",
    "tap-spec": "^5.0.0",
    "tape": "^5.9.0",
    "tshy": "^3.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.5"
  }
}
