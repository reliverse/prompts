    "string-width": "^7.2.0",
    "strip-ansi": "^7.1.0",
    "terminal-size": "^4.0.0",
    "ts-regex-builder": "^1.8.2",
    "window-size": "^1.1.1",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@biomejs/biome": "1.9.4",
    "@cspell/dict-npm": "^5.1.14",
